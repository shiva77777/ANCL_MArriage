@model ANCL_Marriage_MVC.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<style type="text/css">
    .style1 {
        height: 99px;
    }

    .style2 {
        height: 60px;
    }

    .body {
        font-family: "lucida grande",tahoma,verdana,arial,sans-serif;
        font-size: 12px;
        color: #333333;
        margin: 4px;
    }

    button, input, optgroup, select, textarea {
        margin: -6px 6px 16px 0;
        font: inherit;
        color: inherit;
    }

    #txtPassword {
        -webkit-text-security: disc;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>

    .container1 {
        align-content: center;
    }

    .card {
        /*height: 400px;
                            width: 400px; */
        /*         background-color: #002b5e !important;
             */ background: linear-gradient(180deg, rgba(1,66,143,1) 0%, rgba(0,62,136,1) 50%, rgba(0,140,168,1) 100%);
        /* box-shadow: 0px 0px 30px 3px lightblue; */
    }

    .card-header h3 {
        color: white;
    }


    .remember {
        color: white;
    }

        .remember input {
            width: 20px;
            height: 20px;
            margin-left: 15px;
            margin-right: 5px;
        }

    .login_btn {
        color: white;
        background-color: #00142d;
        width: 200px;
    }

        .login_btn:hover {
            color: black;
            background-color: white;
        }

    .bgimage {
        /* background-image: url('http://getwallpapers.com/wallpaper/full/a/5/d/544750.jpg'); */
        background-color: #f3f3f3;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

<div class="bgimage">
    <div class="card col-12 col-sm-10 col-md-6 col-lg-4 p-4">
        <h3 class="text-center mb-4 text-white">Login</h3>
        <div class="card-body">
            <form method="post" action="Login/Login">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label text-white">Username</label>
                    <input asp-for="UserName" class="form-control" oncopy="return false" onpaste="return false" oncut="return false">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-white">Password</label>
                    <input asp-for="Password" type="password" class="form-control" oncopy="return false" onpaste="return false" oncut="return false">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="d-flex justify-content-center">

                    <button type="submit" class="btn btn-submit login_btn mb-3">
                        <i class="bi bi-check-circle"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

