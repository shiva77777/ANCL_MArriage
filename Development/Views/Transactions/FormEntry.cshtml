@model ANCL_Marriage_MVC.Models.FormEntry
@{
    ViewBag.Title = "FormEntry";
    Layout = "_MasterLayout";
}

<style type="text/css">
    .style7 {
        width: 100%;
    }

    .style10 {
        width: 65px;
        height: 29px;
    }

    .style11 {
        width: 14px;
        height: 29px;
    }

    .style12 {
        height: 29px;
        width: 354px;
    }
</style>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>फॉर्म नोंदणी</h5>
                </div>
                <div class="ibox-content">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="nav-tabs-custom">
                                <div class="tab-content">
                                    <form method="post" action="/Masters/FrmFormEntry">
                                      
                                        <div class="active tab-pane">
                                            <div class="form-horizontal">
                                                <div class="form-group">
                                                    <div class="col-md">
                                                        <label class="col-sm-3 control-label">
                                                            फॉर्म क्र.<span style="color: red">*</span> :
                                                        </label>
                                                        <div class="col-md-4">
                                     
                                                            <input asp-for="FormId" class="form-control" Width="200px" CssClass="form-control" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md">
                                                        <label class="col-sm-3 control-label">
                                                            प्रभाग<span style="color: red">*</span> :
                                                        </label>
                                                        <div class="col-md-4">
                                                            <select asp-for="CollCenterId"  class="form-control">
                                                                <option value="">Select</option>
                                                                @if (ViewBag.Ward != null)
                                                                {
                                                                    @foreach (var item in ViewBag.Ward)
                                                                    {
                                                                        <option value="@item.Id">@item.Name</option>
                                                                    }
                                                                }
                                                            </select>                                                         
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md">
                                                        <label class="col-sm-3 control-label">
                                                            अर्जदाराचे नांव<span style="color: red">*</span> :
                                                        </label>
                                                        <div class="col-md-2">
                                                          
                                                            <input asp-for="FirstName" class="form-control" Width="200px" CssClass="form-control" >
                                                        </div>
                                                        <div class="col-md-2">
                                                            <input asp-for="MiddleName" class="form-control" Width="200px" CssClass="form-control" >
                                                        </div>
                                                        <div class="col-md-2">
                                                            <input asp-for="LastName" class="form-control" Width="200px" CssClass="form-control" >
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md">
                                                        <label class="col-sm-3 control-label">
                                                            दूरध्वनी क्र<span style="color: red">*</span> :
                                                        </label>
                                                        <div class="col-md-4">
                                                            <input asp-for="PhoneNo" class="form-control" Width="200px" maxlength="10" CssClass="form-control">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md">
                                                        <label class="col-sm-3 control-label">
                                                            पत्ता<span style="color: red">*</span> :
                                                        </label>
                                                        <div class="col-md-4">
                                                            <textarea asp-for="Adddress" class="form-control" Width="200px" Height="60px" CssClass="form-control"></textarea>
                                                           
                                                        </div>
                                                    </div>
                                                </div>
                                                <hr />
                                                <div>
                                                    <div class="col-sm-4 col-sm-offset-5">
                                                        <button type="submit" class="btn btn-primary login_btn mb-3">
                                                            <i class="bi bi-check-circle"></i> Submit
                                                        </button>

                                                       @*  <button type="Cancel" class="btn btn-primary login_btn mb-3">
                                                            <i class="bi bi-check-circle"></i> Back
                                                        </button> *@
                                                    </div>
                                                </div>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>